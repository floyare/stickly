---
import "../styles/_globals.scss"
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
        <meta name="author" content="floyare" />
        <meta name="keyword" content="stickly, notes, sticky notes, notes app, note"/>
		<meta name="description" content="Notes application web platform where you can create and move sticky notes around your virtual board, helping you to organize your thoughts and ideas visually." />
		<meta name="viewport" content="width=device-width" />
		<link rel="shortcut icon" href="./stickly.ico" type="image/x-icon">
        <meta name="theme-color" content="#f8da19" />
		<meta name="generator" content={Astro.generator} />

        <meta property="og:url" content="https://stickly.pages.dev/">
        <meta property="og:type" content="website">
        <meta property="og:title" content="stickly.">
        <meta property="og:description" content="Notes application web platform where you can create and move sticky notes around your virtual board, helping you to organize your thoughts and ideas visually.">
        <meta property="og:image" content="/sticklybc.png">

        <meta name="twitter:card" content="summary_large_image">
        <meta property="twitter:domain" content="stickly.pages.dev">
        <meta property="twitter:url" content="https://stickly.pages.dev/">
        <meta name="twitter:title" content="stickly.">
        <meta name="twitter:description" content="Notes application web platform where you can create and move sticky notes around your virtual board, helping you to organize your thoughts and ideas visually.">
        <meta name="twitter:image" content="/sticklybc.png">
		<GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,100;9..40,200;9..40,400;9..40,500;9..40,600;9..40,1000&display=swap"></GoogleFontsOptimizer>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>